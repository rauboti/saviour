<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <!-- Cleaner font -->
    <link href="https://fonts.googleapis.com/css?family=Rajdhani" rel="stylesheet">
    <!-- CSS source files -->
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <section>
      <div class="container">
        <div class="headline-box">Basic</div>
        <div class="row">
          <div class="col-40">Current:</div>
          <div class="col-60"><input id="txtCurrentBalance" type="text" class="input-basic field" /></div>
        </div>
        <div class="row">
          <div class="col-40">Goal:</div>
          <div class="col-60"><input id="txtGoal" type="text" class="input-basic field" /></div>
        </div>
        <div class="row">
          <div class="col-40">Remaining:</div>
          <div class="col-60"><input id="txtRemainingBalance" type="text" class="field-result field" readonly tabindex="-1"/></div>
        </div>
      </div>
      <div class="container">
        <div class="headline-box">Loaning the rest</div>
        <div class="row">
          <div class="col-40">Interest:</div>
          <div class="col-60"><input id="txtInterest" type="text" class="input-loan field" /></div>
        </div>
        <div class="row">
          <div class="col-40">Years:</div>
          <div class="col-60"><input id="txtYears" type="text" class="input-loan field" /></div>
        </div>
        <div class="row">
          <div class="col-40">Monthly:</div>
          <div class="col-60"><input id="txtMonthly" type="text" class="field-result field" readonly tabindex="-1"/></div>
        </div>
        <div class="row">
          <div class="col-40">Total cost:</div>
          <div class="col-60"><input id="txtTotalCost" type="text" class="field-result field" readonly tabindex="-1"/></div>
        </div>
      </div>
    </section>
  </body>
  <foot>
    <!-- JS source files -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/mobile.js"></script>
    <script src="/js/savingGoals.js"></script>
  </foot>
</html>
