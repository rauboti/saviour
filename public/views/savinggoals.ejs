<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <!-- Cleaner font -->
    <link href="https://fonts.googleapis.com/css?family=Rajdhani" rel="stylesheet">
    <!-- CSS source files -->
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <section>
      <div class="container">
        <div class="headline-box">Basic</div>
        <table>
          <tr>
            <td class="tr-label-basic">Current:</td>
            <td class="tr-textbox-basic"><input id="txtCurrentBalance" type="number" class="input-basic field" /></td>
          </tr>
          <tr>
            <td class="tr-label-basic">Goal:</td>
            <td class="tr-textbox-basic"><input id="txtGoal" type="number" class="input-basic field" /></td>
          </tr>
          <tr>
            <th class="tr-label-basic">Remaining:</th>
            <td class="tr-textbox-basic"><input id="txtRemainingBalance" type="number" class="field-result field" readonly tabindex="-1"/></td>
          </tr>
        </table>
      </div>
      <div class="container">
        <div class="headline-box">Loaning the rest</div>
        <table>
          <tr>
            <td class="tr-label-basic">Interest:</td>
            <td class="tr-textbox-basic"><input id="txtInterest" type="number" class="input-loan field" /></td>
          </tr>
          <tr>
            <td class="tr-label-basic">Years:</td>
            <td class="tr-textbox-basic"><input id="txtYears" type="number" class="input-loan field" /></td>
          </tr>
          <tr>
            <th class="tr-label-basic">Monthly:</th>
            <td class="tr-textbox-basic"><input id="txtMonthly" type="number" class="field-result field" readonly tabindex="-1"/></td>
          </tr>
          <tr>
            <th class="tr-label-basic">Total cost:</th>
            <td class="tr-textbox-basic"><input id="txtTotalCost" type="number" class="field-result field" readonly tabindex="-1"/></td>
          </tr>
        </table>
      </div>
    </section>
  </body>
  <foot>
    <!-- JS source files -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/mobile.js"></script>
    <script src="/js/savingGoals.js"></script>
  </foot>
</html>
